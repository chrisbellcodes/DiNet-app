<h1>Change your dish</h1>

    <%= form_for @guest do |f| %>
        <%= f.hidden_field :dinner_party_id,  :value => @dinner.id %>
        <%= f.hidden_field :user_id,  :value => @current_user.id %>
        <%= f.label :dish %>
        <%= f.text_field :dish %>
        <%= f.submit "Join the Party!"%>
     <% end %>
     
